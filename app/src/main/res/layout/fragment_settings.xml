<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainScreenBackground"
    android:orientation="vertical"
    tools:context="com.boros.android.starter.features.main.settings.SettingsFragment">

    <com.boros.android.starter.features.main.settings.SettingsItemView
        android:id="@+id/settingsItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        app:settingsIcon="@drawable/ic_android"
        app:subTitleText="Asd"
        app:titleText="Something" />

    <com.boros.android.starter.features.main.settings.SettingsCheckboxItemView
        android:id="@+id/settingsCheckboxItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="Is something enabled" />

</LinearLayout>
